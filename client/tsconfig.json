{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@common/*": [
        "../server/src/common/*"
      ]
    },
    "typeRoots": [
      "../node_modules/@types",
      "node_modules/@types",
      "../server/src/common/@types"
    ],
  },
  "include": [
    "src",
    "../server/src/common"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}